---
interface Props {
  type: 'login' | 'signup';
}

const { type } = Astro.props;
---

<div class="auth-container">
  <h1>PlaylistS</h1>
  <form class="auth-form">
    <div class="form-group">
      <label for="username">Username</label>
      <input 
        type="email" 
        id="username" 
        placeholder="john@playlistsync.io" 
        required
      />
    </div>
    
    <div class="form-group">
      <label for="password">Password</label>
      <input 
        type="password" 
        id="password" 
        placeholder="************" 
        required
      />
    </div>

    <button type="submit" class="primary-button">
      {type === 'signup' ? 'Sign Up' : 'Login'}
    </button>

    <div class="divider">or</div>


    <a href="/load-playlist" class="secondary-button">Sync playlists now</a>

  </form>
</div>

<style>
  .auth-container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1rem;` `
    background: #13151a;
    color: white;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 2rem;
  }

  .auth-form {
    width: 100%;
    max-width: 400px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  label {
    font-size: 1rem;
  }

  input {
    padding: 0.8rem;
    border-radius: 4px;
    border: none;
    background: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
  }

  .primary-button {
    background: #7C5DFA;
    color: white;
    padding: 1rem;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    cursor: pointer;
    transition: background 0.2s;
  }

  .primary-button:hover {
    background: #6B4FF8;
  }

  .secondary-button {
    background: #1E2139;
    color: white;
    padding: 1rem;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    cursor: pointer;
    transition: background 0.2s;
  }

  .secondary-button:hover {
    background: #252945;
  }

  .divider {
    text-align: center;
    position: relative;
    margin: 1rem 0;
  }

  .divider::before,
  .divider::after {
    content: "";
    position: absolute;
    top: 50%;
    width: 45%;
    height: 1px;
    background: rgba(255, 255, 255, 0.1);
  }

  .divider::before {
    left: 0;
  }

  .divider::after {
    right: 0;
  }
</style>