<nav class="nav-container">
    <a href="/" class="home-icon" aria-label="Home">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M9 22V12h6v10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </a>
  
    <div class="auth-buttons">
      <a href="/login" class="auth-button login">Login</a>
      <a href="/signup" class="auth-button signup">Sign Up</a>
    </div>
  </nav>
  
  <style>
    .nav-container {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      background: rgba(26, 27, 38, 0.8);
      backdrop-filter: blur(8px);
      z-index: 1000;
    }
  
    .home-icon {
      color: white;
      transition: opacity 0.2s;
    }
  
    .home-icon:hover {
      opacity: 0.8;
    }
  
    .auth-buttons {
      display: flex;
      gap: 1rem;
    }
  
    .auth-button {
      padding: 0.5rem 1rem;
      border-radius: 4px;
      text-decoration: none;
      font-size: 0.9rem;
      transition: all 0.2s;
    }
  
    .login {
      color: white;
      background: transparent;
      border: 1px solid rgba(255, 255, 255, 0.2);
    }
  
    .login:hover {
      background: rgba(255, 255, 255, 0.1);
    }
  
    .signup {
      color: white;
      background: #7C5DFA;
    }
  
    .signup:hover {
      background: #6B4FF8;
    }
  </style>