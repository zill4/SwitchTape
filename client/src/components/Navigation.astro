<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: var(--nav-height);
    background: var(--color-white);
    border-bottom: 1px solid var(--color-black);
    z-index: 1000;
  }

  .nav-content {
    max-width: 1200px;
    height: 100%;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    text-decoration: none;
  }

  .logo h1 {
    color: var(--color-red);
    font-size: 1.5rem;
    font-weight: bold;
    text-transform: uppercase;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-links a {
    color: var(--color-black);
    text-decoration: none;
    text-transform: uppercase;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .nav-links a:hover {
    color: var(--color-red);
  }
</style>