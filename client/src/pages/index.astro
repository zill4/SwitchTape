---
import Layout from '../layouts/Layout.astro';
---

<Layout title="SwitchTape">
	<main>
		<section class="hero">
			<div class="logo-container">
				<img 
					src="/images/switchtape-logo-black.png" 
					alt="SwitchTape Logo" 
					class="logo" 
				/>
			</div>
			<div class="timestamp">{new Date().toLocaleString('en-US', { 
				month: '2-digit',
				day: '2-digit',
				year: 'numeric',
				hour: '2-digit',
				minute: '2-digit',
				hour12: false,
				timeZone: 'America/Los_Angeles'
			})} PST
			<a href="/load-playlist">Transfer a playlist now</a>
			</div>	

			<!-- <div class="grid">
				<a href="/load-playlist" class="grid-item">
					<img src="/path/to/image1.jpg" alt="Transfer Hub" />
					<span>Transfer Hubassasaassa</span>
				</a>
			</div> -->
		</section>
	</main>
</Layout>

<style>
	.hero {
		padding: 2rem 0;
	}

	.timestamp {
		text-align: center;
		margin-bottom: 2rem;
		font-family: monospace;
	}

	.logo-container {
		text-align: center;
		margin-bottom: 4rem;
	}

	.logo {
		max-width: 200px;
		height: auto;
	}

	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1rem;
	}

	.grid-item {
		position: relative;
		aspect-ratio: 1;
		overflow: hidden;
		text-decoration: none;
	}

	.grid-item img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.grid-item span {
		position: absolute;
		bottom: 1rem;
		left: 1rem;
		color: var(--color-black);
		text-transform: uppercase;
		font-size: 0.875rem;
		font-weight: 500;
	}
</style>
