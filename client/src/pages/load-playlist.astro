---
import { LoadPlaylistCard } from '../components/LoadPlaylistCard';
// import '../components/LoadPlaylist.css';
import Layout from '../layouts/Layout.astro';

interface Props {
  currentStep?: number;
  totalSteps?: number;
}

const { currentStep = 2, totalSteps = 4 } = Astro.props;
---

<Layout title="Load playlist">
  <header>
    <h1>Select playlists to move</h1>
    <div class="step-indicator">
      <button class="back-button" aria-label="Go back">
        <i class="fas fa-chevron-left"></i>
      </button>
      <span>STEP {currentStep}/{totalSteps}</span>
    </div>
  </header>

  <LoadPlaylistCard client:only />
</Layout>

<style>
.container {
    min-height: 100vh;
    padding: 2rem;
    background: #1a1b26;
    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
}

header {
    width: 100%;
    max-width: 800px;
    margin-bottom: 2rem;
    text-align: center;
}

h1 {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 1rem;
}

span {
    font-size: 1.5rem;
    font-weight: bold;
    color: white;
}
</style>